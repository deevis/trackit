.w-full.max-w-xl.flex.justify-center
  = form_for @tracked_site_product_index, html: { class: "w-full bg-white shadow-md rounded px-8 pt-6 pb-8 mb-4", role: "form" } do |f|
    -if @tracked_site_product_index.errors.any?
      .alert.alert-danger.alert-dismissable{role: "alert"}
        %button.close{type: "button", data: {dismiss: "alert"} }
          %span{aria: {hidden: "true"} } &times;
          %span.sr-only Close
        %h4= "#{pluralize(@tracked_site_product_index.errors.count, "error")} prohibited this tracked_site_product_index from being saved:"

        %ul
          - @tracked_site_product_index.errors.full_messages.each do |msg|
            %li= msg

    -%i(tracked_site_class product_index_url category sub_category).each do |field|
      .flex.flex-wrap.-mx-3.mb-6
        .w-full.px-3  
          = f.text_field field, class: 'appearance-none block w-full bg-gray-200 text-gray-700 border border-red-500 rounded py-3 px-4 mb-3 leading-tight focus:outline-none focus:bg-white" id="form_field_#{field}', placeholder: field.to_s.titleize
    .flex.flex-wrap.-mx-3.mb-6
      .w-full.px-3  
        = f.submit class: 'action-primary'
